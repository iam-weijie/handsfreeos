{
    "manifest_version": 3,
    "name": "Jedi Scroll",
    "version": "1.0",
    "description": "Use hand gestures to scroll any webpage",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["gestureScroll.js"],
        "run_at": "document_idle"
      }
    ]
  }