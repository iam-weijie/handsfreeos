{
  "manifest_version": 3,
  "name": "Jedi Scroll",
  "version": "1.0",
  "description": "Use hand gestures to scroll any webpage",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "hands.js",
        "camera_utils.js",
        "gestureScroll.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
